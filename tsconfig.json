{
  "include": ["src/**/*", "./test/**/*"],
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "allowJs": true,
    "module": "CommonJS",
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "JSX.createElement",
    "jsxFragmentFactory": "JSX.Fragment",
    "esModuleInterop": true
  }
}
