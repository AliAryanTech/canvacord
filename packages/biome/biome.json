{
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "ignore": [
            "node_modules/**",
            "dist/**"
        ],
        "include": [
            "src/**"
        ],
        "lineWidth": 120,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineEnding": "lf"
    }
}